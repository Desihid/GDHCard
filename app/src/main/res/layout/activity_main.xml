<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oc.startup.ra.GDHcard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/restaurant"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/GDHCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#ff0000"
        android:textStyle="bold|italic"
        android:padding="20dp"
        android:text="All about food in Restaurant" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:textColor="#ff0000"
        android:padding="20dp"
        android:text="is a business which prepares and serves food and drinks to customers in exchange for money."
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-light"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="By Guntur Desi H" />

</RelativeLayout>
